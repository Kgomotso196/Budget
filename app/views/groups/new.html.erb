<div class="flex flex-col items-center mb-20">
<div class="flex w-96 bg-sky-500 p-4 text-slate-50 fixed top-0 py-2 w-full">
<%= link_to groups_path do %>
  <%= image_tag ('all/back-icon.png'), class: "w-6 h-6" %>
  <% end %>
    <h3 class="ml-28">CREATE GROUP</h3>
</div>
  <h3 class="text-sky-400 text-xl mt-4 font-bold mb-6"> Add a new category</h3>
  <%= form_with url: groups_path, scope: :group do |form| %>
    <div>
    <%= form.label :Name %><br>
    <%= form.text_field :name, class: 'mt-2 w-56 p-1 rounded', require: true %>
    </div>

    <div class="mt-2">
    <%= form.label :icon_link %><br>
    <%= form.text_field :icon, class: 'mt-2 w-56 p-1 rounded', require: true %>
    </div>

    <%= form.submit "Submit", class: "bg-sky-400 p-2 rounded text-slate-50 mt-4" %>
    <%= link_to 'Back', groups_path, class: "bg-sky-400 rounded text-slate-50 mt-4 ml-20 px-4 py-3" %>
  <% end %>
</div>
